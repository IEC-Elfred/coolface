<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LikeButton">
        <attr name="accentColor" format="color" />
        <attr name="ltheme">
            <enum name="heart" value="1" />
            <enum name="star" value="2" />
            <enum name="thumb" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="DragCardView">
        <attr name="draggable" format="boolean" />
    </declare-styleable>

    <declare-styleable name="BoundAnimationLayout">
        <attr name="boundColor" format="color" />
        <attr name="boundStrokeWidth" format="float" />
        <attr name="boundAnimationDuration" format="integer" />
        <attr name="boundPadding" format="float" />
        <attr name="boundPaddingLeft" format="float" />
        <attr name="boundPaddingRight" format="float" />
        <attr name="boundPaddingBottom" format="float" />
        <attr name="boundPaddingTop" format="float" />
        <attr name="boundPaddingHor" format="float" />
        <attr name="boundPaddingVer" format="float" />
    </declare-styleable>
</resources>