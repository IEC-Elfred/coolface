<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/picture_image"
            android:transitionName="@string/image_shared"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>
    <ImageView
        android:id="@+id/picture_modules"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_modules_white_24dp"
        android:layout_margin="24dp"
        android:layout_width="36dp"
        android:layout_height="36dp" />
</FrameLayout>